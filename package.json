{
  "dependencies": {
    "playwright": "^1.53.1"
  },
  "scripts": {
    "lint": "npm run lint:ts && npm run lint:format",
    "lint:ts": "tsc -b jsconfig.json",
    "lint:format": "prettier --check --ignore-path .gitignore .",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:mutation": "npx stryker run",
    "start": "lite-server",
    "e2e": "npx playwright test trabalho/trabalho-final.js",
    "trabalho-final": "node --experimental-vm-modules node_modules/jest/bin/jest.js trabalho/trabalho-final.test.js --passWithNoTests --config jest.config.cjs"
  },
  "devDependencies": {
    "jest": "^30.0.3"
  }
}
